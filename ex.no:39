#include <stdio.h>
#include <math.h>
#include <stdlib.h>

// Structure to store points and their distance
struct Point {
    int x, y;
    double dist;
};

// Function to calculate distance of point from origin
double distance(int x, int y) {
    return sqrt(x*x + y*y);
}

// Comparison function for sorting by distance
int compare(const void *a, const void *b) {
    struct Point *p1 = (struct Point *)a;
    struct Point *p2 = (struct Point *)b;

    if (p1->dist > p2->dist) return 1;
    else if (p1->dist < p2->dist) return -1;
    return 0;
}

int main() {
    int points[][2] = { {1,3}, {-2,2}, {5,8}, {0,1} };
    int n = 4, k = 2;

    struct Point arr[n];

    // Store points with their distances
    for (int i = 0; i < n; i++) {
        arr[i].x = points[i][0];
        arr[i].y = points[i][1];
        arr[i].dist = distance(arr[i].x, arr[i].y);
    }

    // Sort by distance
    qsort(arr, n, sizeof(struct Point), compare);

    // Print k closest points
    printf("The %d closest points are:\n", k);
    for (int i = 0; i < k; i++) {
        printf("[%d, %d]\n", arr[i].x, arr[i].y);
    }

    return 0;
}
