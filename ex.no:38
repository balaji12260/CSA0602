#include <stdio.h>

int binarySearch(int arr[], int n, int key, int *comparisons) {
    int low = 0, high = n - 1, mid;

    while (low <= high) {
        (*comparisons)++;  
        mid = (low + high) / 2;

        if (arr[mid] == key)
            return mid;          // Return index (0-based)

        else if (arr[mid] < key)
            low = mid + 1;

        else
            high = mid - 1;
    }

    return -1;  // Not found
}

int main() {
    int arr[] = {5,10,15,20,25,30,35,40,45};
    int n = 9;
    int key = 20;

    int comparisons = 0;
    int index = binarySearch(arr, n, key, &comparisons);

    if (index != -1)
        printf("Element %d found at index (1-based): %d\n", key, index + 1);
    else
        printf("Element %d not found.\n", key);

    printf("Comparisons Made: %d\n", comparisons);
    return 0;
}
