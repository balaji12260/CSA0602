#include <stdio.h>

// Function to calculate number of ways to climb stairs
int climbStairs(int n) {
    if (n <= 2)
        return n;  // Base cases: 1→1 way, 2→2 ways

    int first = 1;  // Ways to reach step 1
    int second = 2; // Ways to reach step 2
    int current;

    // Use dynamic programming (like Fibonacci)
    for (int i = 3; i <= n; i++) {
        current = first + second;
        first = second;
        second = current;
    }

    return second;
}

int main() {
    int n;

    // Example 1
    n = 4;
    printf("Input: n=%d\nOutput: %d\n\n", n, climbStairs(n));

    // Example 2
    n = 3;
    printf("Input: n=%d\nOutput: %d\n", n, climbStairs(n));

    return 0;
}
